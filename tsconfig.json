{
    "include": ["src/*.ts"],
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "types": ["mocha"],
      "noImplicitAny": true,
      "outDir": "./dist",
      "declaration": true,
      "esModuleInterop": true,
      "watch": false,
      "strict": true,
      "skipLibCheck": true
    }
  }